generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  Frontend
  Backend
}

enum ProjectStatus {
  InProgress
  Complete
}

enum TaskStatus {
  Complete
  Incomplete
}

enum StoryStatus {
  Pending
  InProgress
  Complete
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String
  password String
  projects Project[]
  Task     Task[]
}

model Project {
  id                    String                  @id @default(uuid())
  title                 String
  slug                  String
  startDate             DateTime
  dueDate               DateTime
  status                ProjectStatus           @default(InProgress)
  user                  User                    @relation(fields: [userId], references: [id])
  userId                String
  UserStory             UserStory[]
  FunctionalRequirement FunctionalRequirement[]
  TechStack             TechStack[]
  Task                  Task[]
  createdAt             DateTime                @default(now())
}

model UserStory {
  id          String      @id @default(uuid())
  title       String
  description String
  status      StoryStatus
  due         DateTime
  project     Project     @relation(fields: [projectId], references: [id])
  projectId   String
  Task        Task[]
  createdAt   DateTime    @default(now())
}

model FunctionalRequirement {
  id          String        @id @default(uuid())
  title       String
  description String
  project     Project       @relation(fields: [projectId], references: [id])
  projectId   String
  Requirement Requirement[]
  createdAt   DateTime      @default(now())
}

model Requirement {
  id                      String                @id @default(uuid())
  description             String
  status                  TaskStatus            @default(Incomplete)
  functionalRequirement   FunctionalRequirement @relation(fields: [functionalRequirementId], references: [id])
  functionalRequirementId String
  createdAt               DateTime              @default(now())
}

model Task {
  id          String     @id @default(uuid())
  description String
  status      TaskStatus @default(Incomplete)
  userStory   UserStory  @relation(fields: [userStoryId], references: [id])
  userStoryId String
  project     Project    @relation(fields: [projectId], references: [id])
  projectId   String
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime   @default(now())
}

model TechStack {
  id        String   @id @default(uuid())
  type      Type
  tools     String[]
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
  createdAt DateTime @default(now())
}
